{
  "name": "@nanostores/logger",
  "version": "0.0.0",
  "description": "Logger of builds, lifecycles and changes for Nano Stores",
  "keywords": [
    "nanostores",
    "devtools",
    "logger",
    "store",
    "state",
    "nano"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && size-limit",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch"
  },
  "author": "Eddort <webisforce@gmail.com>",
  "license": "MIT",
  "repository": "nanostores/logger",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@logux/eslint-config": "^46.0.0",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@types/jest": "^27.0.2",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.11.0",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "check-dts": "^0.6.1",
    "clean-publish": "^3.4.1",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "nanodelay": "^2.0.1",
    "nanostores": "nanostores/nanostores#next",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^6.0.3",
    "ts-jest": "^27.0.6",
    "typescript": "^4.4.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "camelcase": "off"
    },
    "overrides": [
      {
        "files": "*.{ts,js}",
        "rules": {
          "no-console": "off"
        }
      }
    ],
    "globals": {
      "jsdom": false
    }
  },
  "size-limit": [
    {
      "path": "./index.js",
      "import": "{ logger }",
      "limit": "1221 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
