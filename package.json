{
  "name": "@nanostores/logger",
  "version": "0.0.0",
  "description": "Logger of builds, lifecycles and changes for Nano Stores",
  "keywords": [
    "nanostores",
    "devtools",
    "logger",
    "store",
    "state",
    "nano"
  ],
  "scripts": {
    "test": "eslint . && check-dts && size-limit",
    "test:vitest": "vitest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch"
  },
  "author": "Eddort <webisforce@gmail.com>",
  "license": "MIT",
  "repository": "nanostores/logger",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "nanostores": ">=0.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@logux/eslint-config": "^50.0.0",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@types/node": "^20.2.5",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "c8": "^7.13.0",
    "check-dts": "^0.7.2",
    "clean-publish": "^3.4.1",
    "eslint": "^8.41.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "happy-dom": "^9.20.3",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.1",
    "nanostores": "^0.8.1",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^6.0.3",
    "typescript": "^5.0.4",
    "vitest": "^0.31.1"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true,
        "isolatedModules": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "no-console": "off"
    }
  },
  "size-limit": [
    {
      "path": "./index.js",
      "import": "{ logger }",
      "limit": "1221 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
